<?xml version="1.0"?>
<opnsense>
  <interfaces>
    <wan>
      <if>em4</if>
      <descr>WAN</descr>
      <enable>1</enable>
      <ipaddr>dhcp</ipaddr>
    </wan>
    <lan>
      <if>em2</if>
      <descr>site</descr>
      <enable>1</enable>
      <ipaddr>10.30.0.2</ipaddr>
      <subnet>24</subnet>
    </lan>
    <opt1>
      <if>em0</if>
      <descr>corp</descr>
      <enable>1</enable>
      <ipaddr>10.10.0.2</ipaddr>
      <subnet>24</subnet>
    </opt1>
    <opt2>
      <if>em1</if>
      <descr>dmz</descr>
      <enable>1</enable>
      <ipaddr>10.20.0.2</ipaddr>
      <subnet>24</subnet>
    </opt2>
    <opt3>
      <if>em3</if>
      <descr>cell</descr>
      <enable>1</enable>
      <ipaddr>10.40.0.2</ipaddr>
      <subnet>24</subnet>
    </opt3>
  </interfaces>
  <filter>
    <rule>
      <type>pass</type>
      <interface>lan</interface>
      <source><network>lan</network></source>
      <destination><any/></destination>
    </rule>
  </filter>
</opnsense>
